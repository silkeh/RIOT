include ../Makefile.tests_common

BOARD := nucleo-f411re

USEMODULE += xtimer
USEMODULE += spi_epaper

CFLAGS += -DDISPLAY_X=200
CFLAGS += -DDISPLAY_Y=200
CFLAGS += -DSPI_EPAPER_CONTROLLER=SPI_EPAPER_CONTROLLER_IL3829
CFLAGS += -DSPI_EPAPER_PARAM_CS=GPIO_PIN\(PORT_B,6\)
CFLAGS += -DSPI_EPAPER_PARAM_DC=GPIO_PIN\(PORT_C,7\)
CFLAGS += -DSPI_EPAPER_PARAM_RST=GPIO_PIN\(PORT_A,8\)
CFLAGS += -DSPI_EPAPER_PARAM_BUSY=GPIO_PIN\(PORT_B,10\)

include $(RIOTBASE)/Makefile.include
